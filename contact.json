{
  "schemaVersion": "1.0.0",
  "screen": {
    "id": "contact-form",
    "title": "Contact Us",
    "root": {
      "id": "root",
      "type": "Stack",
      "direction": "vertical",
      "gap": 16,
      "padding": 24,
      "children": [
        {
          "id": "title",
          "type": "Text",
          "text": "Contact Us",
          "fontSize": 24
        },
        {
          "id": "contact-form",
          "type": "Form",
          "states": [
            "default"
          ],
          "fields": [
            {
              "id": "name-field",
              "type": "Field",
              "label": "Name",
              "inputType": "text",
              "required": true
            },
            {
              "id": "email-field",
              "type": "Field",
              "label": "Email",
              "inputType": "email",
              "required": true
            },
            {
              "id": "phone-field",
              "type": "Field",
              "label": "Phone",
              "inputType": "text",
              "required": false
            }
          ],
          "actions": [
            {
              "id": "submit-button",
              "type": "Button",
              "text": "Submit",
              "roleHint": "primary"
            },
            {
              "id": "cancel-button",
              "type": "Button",
              "text": "Cancel",
              "roleHint": "secondary"
            }
          ]
        }
      ]
    }
  },
  "settings": {
    "spacingScale": [
      4,
      8,
      12,
      16,
      24,
      32
    ],
    "minTouchTarget": {
      "w": 44,
      "h": 44
    },
    "breakpoints": [
      "320x640",
      "768x1024",
      "1280x800"
    ]
  }
}