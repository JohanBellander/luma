{
  "schemaVersion": "1.0.0",
  "screen": {
    "id": "login-screen",
    "title": "Login",
    "root": {
      "id": "root",
      "type": "Stack",
      "direction": "vertical",
      "gap": 16,
      "padding": 24,
      "children": [
        {
          "id": "title",
          "type": "Text",
          "text": "Welcome Back",
          "fontSize": 24
        },
        {
          "id": "subtitle",
          "type": "Text",
          "text": "Please sign in to continue"
        },
        {
          "id": "form",
          "type": "Form",
          "fields": [
            {
              "id": "email",
              "type": "Field",
              "label": "Email",
              "inputType": "email",
              "required": true
            },
            {
              "id": "password",
              "type": "Field",
              "label": "Password",
              "inputType": "password",
              "required": true
            }
          ],
          "actions": [
            {
              "id": "submit",
              "type": "Button",
              "text": "Sign In",
              "roleHint": "primary"
            },
            {
              "id": "forgot",
              "type": "Button",
              "text": "Forgot Password?",
              "roleHint": "link"
            }
          ],
          "states": ["default", "loading", "error"]
        }
      ]
    }
  },
  "settings": {
    "spacingScale": [4, 8, 12, 16, 24, 32, 48],
    "minTouchTarget": {
      "w": 44,
      "h": 44
    },
    "breakpoints": ["320x640", "768x1024", "1280x800"]
  }
}
