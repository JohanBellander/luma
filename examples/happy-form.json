{
  "schemaVersion": "1.0.0",
  "screen": {
    "id": "login-form",
    "title": "Login Form",
    "root": {
      "id": "root",
      "type": "Stack",
      "direction": "vertical",
      "gap": 16,
      "padding": 24,
      "children": [
        {
          "id": "title",
          "type": "Text",
          "text": "Login",
          "fontSize": 24
        },
        {
          "id": "login-form",
          "type": "Form",
          "states": ["default"],
          "fields": [
            {
              "id": "email-field",
              "type": "Field",
              "label": "Email",
              "inputType": "email",
              "required": true,
              "helpText": "We'll never share your email"
            },
            {
              "id": "password-field",
              "type": "Field",
              "label": "Password",
              "inputType": "password",
              "required": true,
              "helpText": "At least 8 characters"
            },
            {
              "id": "remember-checkbox",
              "type": "Field",
              "label": "Remember me",
              "inputType": "text"
            }
          ],
          "actions": [
            {
              "id": "submit-button",
              "type": "Button",
              "text": "Login",
              "roleHint": "primary"
            },
            {
              "id": "cancel-button",
              "type": "Button",
              "text": "Cancel",
              "roleHint": "secondary"
            }
          ]
        }
      ]
    }
  },
  "settings": {
    "spacingScale": [4, 8, 12, 16, 24, 32],
    "minTouchTarget": { "w": 44, "h": 44 },
    "breakpoints": ["320x640", "768x1024", "1280x800"]
  }
}
